<div class="container p-5">
  <div class="row justify-content-center contact-card">
    <div class="col-12 col-md-6">
      <div class="card">
        <div class="card-title text-center p-3">
          <h1><%= t('.contact_us') %></h1>
        </div>
        <div class="card-body">
          <%= simple_form_for @contact do |f| %>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :subject %>
            <%= f.input :content %>
            <%= f.submit value: t('.send'), class: 'btn btn-dark float-right' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


